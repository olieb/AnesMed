@model Przuchodnia_Medyczna_Inz.Models.PlacowkaMedyczna

@Html.ValidationSummary(true)
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title text-center title" style="font-size:25px;">Nowa Placówka</h4>
            </div>
            <div class="modal-body">
                <br />
                <div class="form-group" id="nazwak">
                    @Html.LabelFor(model => model.Nazwa, new { @class = "control-label col-md-3 text-right" })
                    <div class="col-md-9">
                        <div id="error-message" class="has-error" style="color: red">Pole "Nazwa" jest wymagana i musi mieć od 5 do 20 znaków.</div>
                        @Html.TextBoxFor(model => model.Nazwa, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Komorka, new { @class = "control-label col-md-3 text-right" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Komorka, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Komorka)
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefon, new { @class = "control-label col-md-3 text-right" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Telefon)
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.GodzinyOtwarcia, new { @class = "control-label col-md-3 text-right" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.GodzinyOtwarcia, new { @class = "form-control", @style="margin-bottom: 25px;"})
                        @Html.ValidationMessageFor(model => model.GodzinyOtwarcia)
                    </div>
                </div>
                <h3 class="sub-title text-left" style="margin-bottom:15px;">Dane Adresowe:</h3>  
                <br />              
                <div class="form-group">
                    @Html.LabelFor(model => model.Adres.Ulica, new { @class = "control-label col-md-3 text-right" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Adres.Ulica, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Adres.Ulica)
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Adres.NrBudynku, new { @class = "control-label col-md-3 text-right" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Adres.NrBudynku, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Adres.NrBudynku)
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Adres.KodPocztowy, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Adres.KodPocztowy, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Adres.KodPocztowy)
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Adres.Miejscowosc, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Adres.Miejscowosc, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Adres.Miejscowosc)
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer" style="margin-top: 100px;">
                <button onclick="PlacowkaAdd()" class="btn btn-success">Zapisz</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
    </div>
</div>
