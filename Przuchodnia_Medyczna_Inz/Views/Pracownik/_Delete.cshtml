@model Przuchodnia_Medyczna_Inz.Models.Pracownik

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="title" style="font-size: 25px;">Zwolnienie Pracownika</h3>
            </div>
            <div class="modal-body">
                <h4 class="sub-title">Czy napewno zwalniasz pracownika <b>@Html.DisplayFor(model => model.ImieNazwisko)</b>?</h4>
                <p class="alert-warning">Ten lekarz ma zaplanowane @Html.DisplayFor(model =>model.Wizyty.Count) wizyt/y.</p>
            </div>

            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    <input type="submit" value="Usuń" class="btn btn-danger" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
                }
            </div>
        </div>
    </div>
</div>



