@model Przuchodnia_Medyczna_Inz.Models.Wizyta

@Html.ValidationSummary(true)
<div class="modal-dialog">
    <div class="modal-content">
        @Html.BeginForm(){
        <div class="modal-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title title" style="font-size:25px;">Diagnoza </h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-md-3">Pacjent</label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Pacjent.ImieNazwisko, new { @class = "form-control", @disabled = "true" })
                        @Html.ValidationMessageFor(model => model.Pacjent.ImieNazwisko)
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Pacjent.Pesel, new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Pacjent.Pesel, new { @class = "form-control", @disabled = "true" })
                        @Html.ValidationMessageFor(model => model.Pacjent.Pesel)
                    </div>
                </div>
                <br /><br />
                <div class="form-group">
                    @Html.LabelFor(model => model.Diagnoza, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Diagnoza, new { @class = "form-control", @cols = 50, @rows = 20, @id = "diagnoza" })
                        @Html.ValidationMessageFor(model => model.Diagnoza)
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer" style="margin-top: 380px;">
                <button onclick="DiagnozaAdd()" class="btn btn-success">Zapisz</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
        }
    </div>
</div>
