
@model Przuchodnia_Medyczna_Inz.ViewModel.PracownikVM

@{
    ViewBag.Title = "Dodaj Pracownika";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">
        <div class="col-md-8 col-md-offset-4 title">
            <h3>Nowy pracownik recepcji </h3>
        </div>
        <br />
        <hr />
        @Html.ValidationSummary(true)
        <h4 class="title">Dane osobowe: </h4>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Pracownik.Imie, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Pracownik.Imie, new { @class = "form-control", @placeholder = "Imie" })
                @Html.ValidationMessageFor(model => model.Pracownik.Imie)
            </div>
            @Html.LabelFor(model => model.Pracownik.Nazwisko, new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Pracownik.Nazwisko, new { @class = "form-control", @placeholder = "Nazwisko" })
                @Html.ValidationMessageFor(model => model.Pracownik.Nazwisko)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Pracownik.PESEL, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Pracownik.PESEL, new { @class = "form-control", @placeholder = "nr pesel" })
                @Html.ValidationMessageFor(model => model.Pracownik.PESEL)
            </div>
            @Html.LabelFor(model => model.Pracownik.Telefon, new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Pracownik.Telefon, new { @class = "form-control", @placeholder = "nr telefonu" })
                @Html.ValidationMessageFor(model => model.Pracownik.Telefon)
            </div>
        </div>
        <hr />
        <h4 class="title">Adres:</h4>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Adres.Ulica, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Adres.Ulica, new { @class = "form-control", @placeholder = "ulica" })
                @Html.ValidationMessageFor(model => model.Adres.Ulica)
            </div>
            @Html.LabelFor(model => model.Adres.NrBudynku, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Adres.NrBudynku, new { @class = "form-control", @placeholder = "nr. domu" })
                @Html.ValidationMessageFor(model => model.Adres.NrBudynku)
            </div>
            @Html.LabelFor(model => model.Adres.NrMieszkania, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Adres.NrMieszkania, new { @class = "form-control", @placeholder = "nr mieszkania" })
                @Html.ValidationMessageFor(model => model.Adres.NrMieszkania)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Adres.KodPocztowy, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Adres.KodPocztowy, new { @class = "form-control", @placeholder = "00-000" })
                @Html.ValidationMessageFor(model => model.Adres.KodPocztowy)
            </div>
            @Html.LabelFor(model => model.Adres.Miejscowosc, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Adres.Miejscowosc, new { @class = "form-control", @placeholder = "miejscowość" })
                @Html.ValidationMessageFor(model => model.Adres.Miejscowosc)
            </div>
        </div>
        <hr />
        <h4 class="title">Zatrudnienie: </h4>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Zatrudnienie.DataZatrudnienia, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Zatrudnienie.DataZatrudnienia, new { @class = "form-control", @Value = @DateTime.Now.ToShortDateString() })
                @Html.ValidationMessageFor(model => model.Zatrudnienie.DataZatrudnienia)
            </div>
            @Html.LabelFor(model => model, "Stanowisko", new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownList("stanowiska", (IEnumerable<SelectListItem>)ViewBag.Selected, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Stanowisko.StanowiskoID)
            </div>
            @Html.LabelFor(model => model.Pracownik.Pensja, new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Pracownik.Pensja, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Pracownik.Pensja)
            </div>
        </div>

        <br />
        <div class="form-group" style="margin-top: 40px;">
            <div class="col-md-offset-9 col-md-3">
                <input type="submit" value="Zapisz" class="btn btn-block btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "Index")
</div>
