@model Przuchodnia_Medyczna_Inz.Models.RegisterViewModel
@{
    ViewBag.Title = "Zarejstruj";
}
<div class="container">
    <div class="row">
        <div class="col-md-offset-3">
            <br />
            <div>
                <h2>Rejestracja Użytkownika</h2>               
                    <h4>Utórz nowe konto w serwisie AnesMed.</h4>
                    @Html.ValidationSummary()                
                <br />
            </div>           
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
              
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                
             <h3>Dane Personalne:</h3>
                  <hr />
                  <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.Imie, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdresyOsob.Imie, new { @class = "form-control", @placeholder = "Imie" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.Imie)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.Nazwisko, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdresyOsob.Nazwisko, new { @class = "form-control", @placeholder = "Nazwisko" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.Nazwisko)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.Telefon, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdresyOsob.Telefon, new { @class = "form-control", @placeholder = "Numer telefonu" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.Telefon)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.PESEL, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdresyOsob.PESEL, new { @class = "form-control", @placeholder = "Numer PESEL" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.PESEL)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.NIP, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AdresyOsob.NIP, new { @class = "form-control", @placeholder = "np. 123-132-32-12" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.NIP)
            </div>
        </div><br/>
    
        <h3>Adres:</h3>

        <hr />
       
        <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.Ulica, "Ulica", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.AdresyOsob.Ulica, new { @class = "form-control", @placeholder= "Ulica"})
                @Html.ValidationMessageFor(model => model.AdresyOsob.Ulica)
            </div>
        
            @Html.LabelFor(model => model.AdresyOsob.NrBudynku, "Nr Bud.", new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.AdresyOsob.NrBudynku, new { @class = "form-control", @placeholder = "nr budynku" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.NrBudynku)
            </div>        
        
            @Html.LabelFor(model => model.AdresyOsob.NrMieszkania, "Nr Lokalu", new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.AdresyOsob.NrMieszkania, new { @class = "form-control", @placeholder = "nr lokalu" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.NrBudynku)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AdresyOsob.KodPocztowy, "Kod Pocztowy", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.AdresyOsob.KodPocztowy, new { @class = "form-control", @placeholder = "Kod Pocztowy" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.KodPocztowy)
            </div>
            @Html.LabelFor(model => model.AdresyOsob.Miejscowosc, "Miejscowość", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.AdresyOsob.Miejscowosc, new { @class = "form-control", @placeholder ="Miejscowość" })
                @Html.ValidationMessageFor(model => model.AdresyOsob.Miejscowosc)
            </div>
        </div>         
                <br/> <br/>      
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-7">
                        <input type="submit" class="btn btn-success col-md-10" value="Zarejestruj" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
